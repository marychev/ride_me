#:import CharacterWrap screen.ui.character_wrap.CharacterWrap
#:import BikeMenuCarousel screen.ui.menu_carousel.BikeMenuCarousel
#:import BIKES bike.bikes.BIKES


<BikesScreen>:
    BoxLayout:
        LeftPanel:
            LeftPanelMenuBikes:
                disabled: True
            LeftPanelMenuMaps
            LeftPanelMenuShop
            Label:
                text: " "
            LeftPanelBtn:
        CenterPanel:
            FloatLayout:
                CenterPanelTitle:
                    id: title
                    text: BIKES[0]['title']
                BikeMenuCarousel:
        RightPanel:
            RightPanelTitle
            CharacterWrap:
                id: character_wrap_power
                title: "Power:"
            CharacterWrap:
                id: character_wrap_speed
                title: "Speed:"
            CharacterWrap:
                id: character_wrap_acceleration
                title: "Acceleration:"
            CharacterWrap:
                id: character_wrap_agility
                title: "Agility:"
            RightPanelBtn

