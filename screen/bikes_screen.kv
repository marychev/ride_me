#:import Window kivy.core.window.Window
#:import CharacterWrap screen.ui.character_wrap.CharacterWrap
#:import MenuCarousel screen.ui.menu_carousel.MenuCarousel


<MenuButton@Button>:
    size_hint: .8, .6


<BikesScreen>:
    BoxLayout:
        # the left panel
        BoxLayout:
            orientation: 'vertical'
            size_hint: .25, 1
            spacing: 4

            Label:
                text: " "
            MenuButton:
                text: "Bike"
                disabled: True
            MenuButton:
                text: "Maps"
                on_press: app.sm.current = 'maps'
            MenuButton:
                text: "Shop"
                on_press: app.sm.current = 'shop'

            Label:
                text: " "

            Button:
                size_hint: .5, 1
                pos_hint: {'left': 1, 'bottom': 1}
                text: "Menu"
                on_press: app.sm.current = 'menu'

        # the center panel
        BoxLayout:
            orientation: 'vertical'
            size_hint: .5, 1

            Label:
                id: title
                size_hint: 1, .1
                text: "BIKES"

            FloatLayout:
                MenuCarousel


        # the right panel
        BoxLayout:
            orientation: "vertical"
            size_hint: .25, 1

            Label:
                text: "[rm]: 0248"
            CharacterWrap:
                title: "Power:"
            CharacterWrap:
                title: "Speed:"
            CharacterWrap:
                title: "Acceleration:"
            CharacterWrap:
                title: "Agility:"

            Button:
                size_hint: .5, 1
                pos_hint: {'right': 1, 'bottom': 1}
                text: "Ok"
                # on_press: app.sm.current = 'start'

