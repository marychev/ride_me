#:import Window kivy.core.window.Window
#:import CharacterWrap screen.ui.character_wrap.CharacterWrap
#:import MenuCarousel screen.ui.menu_carousel.MenuCarousel
#:import BIKES bike.bikes.BIKES


<MenuButton@Button>:
    size_hint: .8, .6


<BikesScreen>:
    BoxLayout:

        # the left panel
        BoxLayout:
            orientation: 'vertical'
            size_hint: .25, 1
            spacing: 4

            Label:
                text: " "
            MenuButton:
                text: "Bike"
                disabled: True
            MenuButton:
                text: "Maps"
                on_press: app.sm.current = 'maps'
            MenuButton:
                text: "Shop"
                on_press: app.sm.current = 'shop'

            Label:
                text: " "

            Button:
                size_hint: .5, 1
                pos_hint: {'left': 1, 'bottom': 1}
                text: "Menu"
                on_press: app.sm.current = 'menu'

        # the center panel
        BoxLayout:
            id: center_block
            orientation: 'vertical'
            size_hint: .5, 1

            FloatLayout:
                Label:
                    id: title
                    font_size: 36
                    pos: self.parent.x, self.parent.y + 280
                    text: BIKES[0]['title']
                MenuCarousel:

        # the right panel
        BoxLayout:
            orientation: "vertical"
            size_hint: .25, 1

            Label:
                text: "[rm]: 0248"
            CharacterWrap:
                title: "Power:"
            CharacterWrap:
                title: "Speed:"
            CharacterWrap:
                title: "Acceleration:"
            CharacterWrap:
                title: "Agility:"

            Button:
                size_hint: .5, 1
                pos_hint: {'right': 1, 'bottom': 1}
                text: "Ok"
                # on_press: app.sm.current = 'start'

