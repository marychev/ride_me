#:import CharacterWrap screen.ui.character_wrap.CharacterWrap
#:import LeftPanelMenuBikes screen.ui.panel_button.LeftPanelMenuBikes
#:import BikeMenuCarousel screen.ui.menu_carousel.BikeMenuCarousel
#:import BIKES bike.bikes.BIKES
#:import Window kivy.core.window.Window


<BikesScreen>:
    RMLayout:
    TitleScreen:
        id: title
        text: BIKES[0]['title']

    CarouselLayout:
        BikeMenuCarousel:

    LeftPanel:
        LeftPanelMenuBikes:
            id: left_panel_menu_bikes
            disabled: True
        LeftPanelMenuMaps:
            id: left_panel_menu_maps
        LeftPanelMenuShop

    RightPanel:
        CharacterWrap:
            id: character_wrap_price
            key: "Price"
            value: BIKES[0]['price']
            has_value: False
            title: self.format_string()
        CharacterWrap:
            id: character_wrap_power
            key: "Power"
            value: BIKES[0]['power']
            max: BIKES[0]['power']
            title: self.format_number()
        CharacterWrap:
            id: character_wrap_speed
            key: "Speed"
            value: BIKES[0]['speed']
            max: BIKES[0]['speed']
            title: self.format_number()
        CharacterWrap:
            id: character_wrap_acceleration
            key: "Acceleration"
            value: BIKES[0]['acceleration']
            max: BIKES[0]['acceleration']
            title: self.format_number()
        CharacterWrap:
            id: character_wrap_agility
            key: "Agility"
            value: BIKES[0]['agility']
            max: BIKES[0]['agility']
            title: self.format_number()

    LeftPanelBtn:
        disabled: False
        on_press: app.sm.current = 'menu'
    RightPanelBtn:
        text: "Buy"
        disabled: False
