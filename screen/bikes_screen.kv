#:import CharacterWrap screen.ui.character_wrap.CharacterWrap
#:import LeftPanelMenuBikes screen.ui.panel_button.LeftPanelMenuBikes
#:import BikeMenuCarousel screen.ui.menu_carousel.BikeMenuCarousel
#:import BIKES bike.bikes.BIKES
#:import Window kivy.core.window.Window


<BikesScreen>:
    RMLayout:
    TitleScreen:
        id: title
        text: BIKES[0]['title']

    CarouselLayout:
        BikeMenuCarousel:

    LeftPanel:
        LeftPanelMenuBikes:
            id: left_panel_menu_bikes
            disabled: True
        LeftPanelMenuMaps:
            id: left_panel_menu_maps
        LeftPanelMenuShop

    RightPanel:
        CharacterWrap:
            id: character_wrap_price
            title: "Price: {} rm".format(BIKES[0]['price'])
            has_value: False
        CharacterWrap:
            id: character_wrap_power
            item: BIKES[0]
            title: "Power"
            value: BIKES[0]['power']
            max: BIKES[0]['power']
        CharacterWrap:
            id: character_wrap_speed
            item: BIKES[0]
            title: "Speed"
            value: BIKES[0]['speed']
            max: BIKES[0]['speed']
        CharacterWrap:
            id: character_wrap_acceleration
            title: "Acceleration"
            item: BIKES[0]
            value: BIKES[0]['acceleration']
            max: BIKES[0]['acceleration']
        CharacterWrap:
            id: character_wrap_agility
            title: "Agility"
            item: BIKES[0]
            value: BIKES[0]['agility']
            max: BIKES[0]['agility']

    LeftPanelBtn:
        disabled: False
        on_press: app.sm.current = 'menu'
    RightPanelBtn:
        text: "Buy"
        disabled: False
