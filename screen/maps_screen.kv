#:import CharacterWrap screen.ui.character_wrap.CharacterWrap
#:import MapMenuCarousel screen.ui.menu_carousel.MapMenuCarousel
#:import MAPS level.maps.MAPS


<MapsScreen>:
    RMLayout:
    TitleScreen:
        id: title
        text: MAPS[0]['title']

    CarouselLayout:
        MapMenuCarousel:

    LeftPanel:
        LeftPanelMenuBikes:
            id: left_panel_menu_bikes
        LeftPanelMenuMaps
            id: left_panel_menu_maps
            disabled: True
        LeftPanelMenuShop

    RightPanel:
        CharacterWrap:
            id: character_wrap_price
            key: "Price"
            title: RightPanelBtn.format_title_right_panel(None, self.key, "{} rm".format(MAPS[0]['price']), None)
            has_value: False
        CharacterWrap:
            id: character_wrap_record
            key: "Record"
            title: RightPanelBtn.format_title_right_panel(None, self.key, '00:00:00', None)
            has_value: False
        CharacterWrap:
            id: character_wrap_level
            key: 'Track'
            title: RightPanelBtn.format_title_right_panel(None, self.key, "{}".format(MAPS[0]['level']), None)
            has_value: False
        CharacterWrap:
            id: character_wrap_map
            key: 'Map'
            title: RightPanelBtn.format_title_right_panel(None, self.key, "{}".format(MAPS[0]['map']), None)
            has_value: False
        CharacterWrap:
            id: character_wrap_total_way
            key: 'Total way'
            title: RightPanelBtn.format_title_right_panel(None, self.key, "{}".format(MAPS[0]['total_way']), None)
            has_value: False

    LeftPanelBtn:
        disabled: False
        on_press: app.sm.current = 'menu'
    RightPanelBtn:
        text: "Buy"
        disabled: False


