#:import CharacterWrap screen.ui.character_wrap.CharacterWrap
#:import MapMenuCarousel screen.ui.menu_carousel.MapMenuCarousel
#:import MAPS level.maps.MAPS


<MapsScreen>:
    BoxLayout:
        LeftPanel:
            LeftPanelMenuBikes:
            LeftPanelMenuMaps
                disabled: True
            LeftPanelMenuShop
            Label:
                text: " "
            LeftPanelBtn:
                disabled: False
                on_press: app.sm.current = 'menu'
        CenterPanel:
            FloatLayout:
                CenterPanelTitle:
                    id: title
                    text: MAPS[0]['title']
                MapMenuCarousel:

        RightPanel:
            RightPanelTitle
            CharacterWrap:
                id: character_wrap_record
                title: "Record: {}".format(0.00)
            Label:
                text: "...."
            Label:
                text: "...."
            Label:
                text: " "
            RightPanelBtn:
                disabled: False


