#:import CharacterWrap screen.ui.character_wrap.CharacterWrap
#:import MapMenuCarousel screen.ui.menu_carousel.MapMenuCarousel
#:import MAPS level.maps.MAPS


<MapsScreen>:
    RMLayout:
    TitleScreen:
        id: title
        text: MAPS[0]['title']

    CarouselLayout:
        MapMenuCarousel:

    LeftPanel:
        LeftPanelMenuBikes:
            id: left_panel_menu_bikes
        LeftPanelMenuMaps
            id: left_panel_menu_maps
            disabled: True
        LeftPanelMenuShop

    RightPanel:
        CharacterWrap:
            id: character_wrap_price
            key: "Price"
            has_value: False
            value: MAPS[0]['price']
            title: self.format_string()
        CharacterWrap:
            id: character_wrap_record
            key: "Record"
            has_value: False
            title: self.format_string('00:00:00')
        CharacterWrap:
            id: character_wrap_level
            key: 'Track'
            has_value: False
            title: self.format_string("{}".format(MAPS[0]['level']))
        CharacterWrap:
            id: character_wrap_map
            key: 'Map'
            has_value: False
            title: self.format_string("{}".format(MAPS[0]['map']))
        CharacterWrap:
            id: character_wrap_total_way
            key: 'Total way'
            has_value: False
            title: self.format_string("{}".format(MAPS[0]['total_way']))

    LeftPanelBtn:
        disabled: False
        on_press: app.sm.current = 'menu'
    RightPanelBtn:
        text: "Buy"
        disabled: False


