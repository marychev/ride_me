#:import Window kivy.core.window.Window
#:import Scene layout.scene.Scene
#:import Tools layout.tools.Tools
#:import LeftButtonWidget button.left_button.LeftButtonWidget
#:import RightButtonWidget button.right_button.RightButtonWidget
#:import Bike bike.bike.Bike
#:import Road road.road.Road


<GameScreen>:
    BoxLayout:
        id: game_screen
        orientation: 'vertical'

        Scene:
            id: scene

            BackgroundImageAnimation:
                id: background_image_animation

            Label:
                text: '{} / {} \n {} / {} | {}'.format(self.pos, self.size, root.pos, root.ids.tools.height, root.ids.road.acceleration)
                color: 1,0,1,1

            Road:
                id: road
                x: 0
                y: root.ids.tools.height
                width: Window.width
                size_hint: None, None
                canvas.before:
                    Clear
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        texture: self.texture

            #Bike:
            #    id: bike

        Tools:
            id: tools
            size_hint: 1, .2

            AnchorLayout:
                id: left_btn_wrap
                anchor_x: 'left'
                anchor_y: 'bottom'
                LeftButtonWidget:

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
                Button:
                    text: 'Back to start'
                    size_hint: .4, .3
                    on_press: root.manager.current = 'start'

            AnchorLayout:
                id: right_btn_wrap
                anchor_x: 'right'
                anchor_y: 'bottom'
                RightButtonWidget:

