#:import Window kivy.core.window.Window
#:import Scene layout.scene.Scene
#:import Tools layout.tools.Tools
#:import LeftButtonWidget button.left_button.LeftButtonWidget
#:import RightButtonWidget button.right_button.RightButtonWidget
#:import Road road.road.Road
#:import Bike bike.bike.Bike
#:import Rock road.rock.Rock
#:import Finish road.finish.Finish
#:import StatusBar label.status_bar.StatusBar


<GameScreen>:
    BoxLayout:
        id: game_screen
        orientation: 'vertical'

        Scene:
            id: scene

            BackgroundImageAnimation:
                id: background_image_animation

            StatusBar:
                id: status_bar
                font_size: 14
                color: 0,0,0,1
                x: self.padding_x
                y: int(Window.height - self.size[1]) - self.padding_y
                size_hint: .5, .5
                text_size: self.size
                valign: 'top'
                padding: 5, 5

            Road:
                id: road
                pos: 0, root.ids.tools.height
                size: Window.width, self.height
                size_hint: None, None

                Rock:
                    id: rock
                    pos: 1000, root.ids.tools.height
                    size: int(Window.width / 16), int(Window.width / 16)

                Finish:
                    id: finish
                    pos: root.ids.road.total_way, root.ids.tools.height
                    size: 80, root.ids.road.height
                    size_hint: None, None

            Bike:
                id: bike
                pos: 80, root.ids.tools.height  # + 200
                size: root.ids.road.height, root.ids.road.height
                size_hint: None, None

        Tools:
            id: tools
            size_hint: 1, .14

            AnchorLayout:
                id: left_btn_wrap
                anchor_x: 'left'
                anchor_y: 'bottom'
                LeftButtonWidget:

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
                Button:
                    text: 'Back to start'
                    size_hint: .4, .3
                    on_press: root.manager.current = 'start'

            AnchorLayout:
                id: right_btn_wrap
                anchor_x: 'right'
                anchor_y: 'bottom'
                RightButtonWidget:
