#:import Scene layout.scene.Scene
#:import Tools layout.tools.Tools
#:import Bike bike.bike.Bike
#:import Road road.road.Road


<GameScreen>:
    BoxLayout:
        orientation: 'vertical'

        Scene:
            #Label:
            #    text: str(self.pos)

            Road:
                canvas.before:
                    Rectangle:
                        size: self.width, 80
                        pos: self.pos[0], self.pos[1] + 80
                        texture: self.texture

            Bike:

        Tools:
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'
                LeftButtonWidget:

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
                Button:
                    text: 'Back to start'
                    size_hint: .4, .3
                    on_press: root.manager.current = 'start'

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                RightButtonWidget:

