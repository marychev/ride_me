#:import Window kivy.core.window.Window
#:import Scene layout.scene.Scene
#:import Tools layout.tools.Tools
#:import LeftButtonWidget button.left_button.LeftButtonWidget
#:import RightButtonWidget button.right_button.RightButtonWidget
#:import Bike bike.bike.Bike
#:import Road road.road.Road


<GameScreen>:
    BoxLayout:
        id: game_screen
        orientation: 'vertical'

        Scene:
            id: scene

            BackgroundImageAnimation:
                id: background_image_animation

            Road:
                id: road
                x: 0
                y: root.ids.tools.height
                width: Window.width
                size_hint: None, None
                canvas.before:
                    Clear
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        texture: self.texture

            Bike:
                id: bike
                x: 80
                y: root.ids.road.pos[1] + root.ids.road.height/4
                height: int(Window.width / 15)
                width: self.height
                size_hint: None, None

            Label:
                text: 'ac: {} \n dur: {}'.format(root.ids.road.acceleration, root.ids.road.distance_traveled)
                color: 0,0,0,1

        Tools:
            id: tools
            size_hint: 1, .2

            AnchorLayout:
                id: left_btn_wrap
                anchor_x: 'left'
                anchor_y: 'bottom'
                LeftButtonWidget:

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
                Button:
                    text: 'Back to start'
                    size_hint: .4, .3
                    on_press: root.manager.current = 'start'

            AnchorLayout:
                id: right_btn_wrap
                anchor_x: 'right'
                anchor_y: 'bottom'
                RightButtonWidget:

