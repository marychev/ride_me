#:import Window kivy.core.window.Window
#:import Scene layout.scene.Scene
#:import Tools layout.tools.Tools
#:import LeftButtonWidget button.left_button.LeftButtonWidget
#:import RightButtonWidget button.right_button.RightButtonWidget
#:import Bike bike.bike.Bike
#:import Road road.road.Road
#:import StatusBar label.status_bar.StatusBar


<GameScreen>:
    BoxLayout:
        id: game_screen
        orientation: 'vertical'

        Scene:
            id: scene


            BackgroundImageAnimation:
                id: background_image_animation


            StatusBar:
                id: status_bar
                font_size: 16
                color: 0,0,0,1
                size_hint: .5, .4
                text_size: self.size
                valign: 'top'
                padding: 5, 5
                x: self.padding_x
                y: int(Window.height - self.size[1]) - self.padding_y

                # outline
                canvas.before:
                    Color:
                        rgb: (.1, .1, .1)
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height

                    Color:
                        rgba: (1, 1, 1, .8)
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Road:
                id: road
                x: 0
                y: root.ids.tools.height
                width: Window.width
                size_hint: None, None

                canvas.before:
                    Clear
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        texture: self.texture

            Bike:
                id: bike
                x: 80
                y: root.ids.road.pos[1] + root.ids.road.height/4
                height: int(Window.width / 16)
                width: self.height
                size_hint: None, None

        Tools:
            id: tools
            size_hint: 1, .14

            AnchorLayout:
                id: left_btn_wrap
                anchor_x: 'left'
                anchor_y: 'bottom'
                LeftButtonWidget:

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
                Button:
                    text: 'Back to start'
                    size_hint: .4, .3
                    on_press: root.manager.current = 'start'

            AnchorLayout:
                id: right_btn_wrap
                anchor_x: 'right'
                anchor_y: 'bottom'
                RightButtonWidget:

