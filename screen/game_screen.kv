#:import Window kivy.core.window.Window
#:import Scene layout.scene.Scene
#:import Tools layout.tools.Tools
#:import LeftButtonWidget button.left_button.LeftButtonWidget
#:import RightButtonWidget button.right_button.RightButtonWidget
#:import Road road.road.Road
#:import Bike bike.bike.Bike
#:import Rock road.rock.Rock
#:import Finish road.finish.Finish
#:import StatusBar label.status_bar.StatusBar


<GameScreen>:
    BoxLayout:
        id: game_screen
        orientation: 'vertical'

        Scene:
            id: scene

            BackgroundImageAnimation:
                id: background_image_animation

            StatusBar:
                id: status_bar
                font_size: 14
                color: 0,0,0,1
                x: self.padding_x
                y: int(Window.height - self.size[1]) - self.padding_y
                size_hint: .5, .5
                text_size: self.size
                valign: 'top'
                padding: 5, 5

            Road:
                id: road
                x: 0
                y: root.ids.tools.height
                width: Window.width
                size_hint: None, None

                # --- ROCK DEV ---
                Rock:
                    id: rock
                    source: 'road/rock/img/rock-1.png'
                    x: 400
                    y: root.ids.tools.height
                    height: int(self.texture_size[0] - 20)

                # --- END ROCK DEV ---

                Finish:
                    id: finish
                    x: -self.width
                    y: root.ids.tools.height
                    width: 80
                    height: root.ids.road.height
                    size_hint: None, None

            Bike:
                id: bike
                x: 80
                y: root.ids.road.pos[1] + root.ids.road.height/4
                height: int(Window.width / 16)
                width: self.height
                size_hint: None, None

        Tools:
            id: tools
            size_hint: 1, .14

            AnchorLayout:
                id: left_btn_wrap
                anchor_x: 'left'
                anchor_y: 'bottom'
                LeftButtonWidget:

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
                Button:
                    text: 'Back to start'
                    size_hint: .4, .3
                    on_press: root.manager.current = 'start'

            AnchorLayout:
                id: right_btn_wrap
                anchor_x: 'right'
                anchor_y: 'bottom'
                RightButtonWidget:
