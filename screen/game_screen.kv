#:import Window kivy.core.window.Window
#:import Scene layout.scene.Scene
#:import Tools layout.tools.Tools
#:import LeftButtonWidget button.left_button.LeftButtonWidget
#:import RightButtonWidget button.right_button.RightButtonWidget
#:import Road road.road.Road
#:import Bike bike.bike.Bike
#:import Rock road.rock.Rock
#:import Start road.start.Start
#:import Finish road.finish.Finish
#:import StatusBar label.status_bar.StatusBar


<GameScreen>:
    BoxLayout:
        orientation: 'vertical'

        Scene:
            id: scene

            BackgroundImageAnimation:
                id: background_image_animation

            StatusBar:
                id: status_bar

                font_size: 13
                color: 0,0,0,1
                x: self.padding_x
                y: int(Window.height - self.size[1]) - self.padding_y
                size_hint: .4, .4
                text_size: self.size
                valign: 'top'
                padding: 5, 5

            Road:
                id: road
                pos: 0, root.ids.tools.height
                size: Window.width, 120 # self.height
                size_hint: None, None

                canvas:
                    Color:
                        rgb: 0, 1, 1
                    Line:
                        bezier: self.line_points
                        width: 1.

                Start:
                    id: start
                    pos: 120 + root.ids.bike.width - 50, root.ids.tools.height
                    size: 50, (root.ids.road.height / 2) + 10
                    size_hint: None, None

                Rock:
                    id: rock
                    pos: 1000, root.ids.road.line_points[-1]
                    size: 80, 80

                Finish:
                    id: finish
                    pos: root.ids.road.total_way, root.ids.tools.height
                    size: 120, (root.ids.road.height / 2) + 10
                    size_hint: None, None

            Bike:
                id: bike
                pos: 120, root.ids.road.y  + 400
                size: 120, 120
                size_hint: None, None

                canvas:
                    Color:
                        rgb: .4, 0, 1
                    Line:
                        bezier: (self.x, self.y, self.x + 400, self.y)
                        width: 1.
                    Line:
                        bezier: (root.ids.bike.x, self.y + root.ids.bike.width/2, self.x + 400, self.y + root.ids.bike.width/2)
                        width: 1.
                    Line:
                        bezier: (root.ids.bike.x, self.y + root.ids.bike.height, self.x + 400, self.y + root.ids.bike.height)
                        width: 1.
        Tools:
            id: tools
            size_hint: 1, .1
            height: 40

            AnchorLayout:
                id: left_btn_wrap
                anchor_x: 'left'
                anchor_y: 'bottom'
                Label:
                    text: "Power: {}".format(root.ids.bike.power)
                LeftButtonWidget:


            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
                Label:
                    text: "State: {}".format(root.ids.road.state)
                Button:
                    text: 'Back to start'
                    size_hint: .4, .3
                    on_press: root.manager.current = 'start'

            AnchorLayout:
                id: right_btn_wrap
                anchor_x: 'right'
                anchor_y: 'bottom'
                Label:
                    text: "Speed: {}".format(root.ids.bike.speed)

                RightButtonWidget:
