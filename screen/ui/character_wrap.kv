#:import BorderImage kivy.graphics.vertex_instructions.BorderImage
#:import Line kivy.graphics.vertex_instructions.Line
#:import Rectangle kivy.graphics.vertex_instructions.Rectangle
#:import Currency objects.currency.currency.Currency

<MenuButton@Button>:
    size_hint: .8, .6


<CharBtn@Button>:
    height: 40
    width: 40
    size_hint: None, None
    disabled: True
    opacity: 0.2


<CharacterWrap>:
    orientation: "vertical"
    title: self.title

    BoxLayout:
        CharBtn:
            text: "|"
        Label:
            text: str(root.title)
        CharBtn:
            text: "+"

    FloatLayout:
        orientation: "vertical"
        progress_wrap: self

        ProgressBar:
            pos: root.pos[0], root.pos[1] + 50
            min: 0
            value: 80
            max: 100

            canvas:
                Color:
                    rgba: 0, 0, 0, .9
                Line:
                    points: self.x, self.y+19, self.x + self.parent.width, self.y+19
                    width: 3

    FloatLayout:
        Label:
            pos: self.parent.parent.x - 40, self.parent.parent.y  # other a state -40
            size_hint: None, None
            text: "0"
        Label:
            text: "0"
            pos: self.parent.parent.x + 160, self.parent.parent.y
            size_hint: None, None
        Label:
            text: "0"
            pos: self.parent.parent.x + 200, self.parent.parent.y
            size_hint: None, None