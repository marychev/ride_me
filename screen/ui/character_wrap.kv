#:import BorderImage kivy.graphics.vertex_instructions.BorderImage
#:import Line kivy.graphics.vertex_instructions.Line
#:import Rectangle kivy.graphics.vertex_instructions.Rectangle
#:import Currency objects.currency.currency.Currency


<CharBtn@Button>:
    height: 40
    width: 40
    size_hint: None, None
    disabled: True
    opacity: 0.2


<CharacterWrap>:
    orientation: "vertical"
    item: self.item
    title: self.title
    value: self.value
    max: self.max

    BoxLayout:
        CharBtn:
            text: "|"
        Label:
            text: "{}".format(root.title)
        CharBtn:
            text: "+"

    FloatLayout:
        orientation: "vertical"
        ProgressBar:
            pos: root.pos[0], root.pos[1] + 50
            min: 0
            value: int(self.parent.parent.value)
            max: int(self.parent.parent.max)

            canvas:
                Color:
                    rgba: 0, 0, 0, .9
                Line:
                    points: self.x, self.y+19, self.x + self.parent.width, self.y+19
                    width: 3

    FloatLayout:
        Label:
            pos: self.parent.parent.x - 40, self.parent.parent.y
            size_hint: None, None
            text: str(root.value)
        Label:
            text: "->"
            pos: self.parent.parent.x + 160, self.parent.parent.y
            size_hint: None, None
        Label:
            text: str(root.max)
            pos: self.parent.parent.x + 200, self.parent.parent.y
            size_hint: None, None