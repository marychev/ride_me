#:import app_config utils.init.app_config
# Center panel

<CenterPanel@BoxLayout>:
    id: center_block
    orientation: 'vertical'
    size_hint: .5, 1


<CenterPanelTitle@Label>:
    id: title
    font_size: 36
    pos: self.parent.x, self.parent.y + 280
    color: .2, .2, .2, 1


# Right panel

<RightPanel@BoxLayout>:
    id: right_block
    orientation: "vertical"
    size_hint: .25, 1


<RightPanelTitle@Label>:
    text: "{}: {}".format(Currency.units, app_config('bike', 'rm'))
    markup: True



# Left panel

<LeftPanel@BoxLayout>:
    id: center_panel
    orientation: 'vertical'
    size_hint: .25, 1
    spacing: 4
    Label:
        text: " "

<LeftPanelBtn@Button>:
    size_hint: .5, 1
    pos_hint: {'left': 1, 'bottom': 1}
    text: "Menu"
    disabled: True

