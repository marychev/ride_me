#:import Window kivy.core.window.Window
#:import app_config utils.init.app_config
#:import PanelBtn screen.ui.bottom_button.PanelBtn


# Center panel

<CenterPanel@BoxLayout>:
    id: center_block
    orientation: 'vertical'
    size_hint: 1, 1


<CenterPanelTitle@Label>:
    id: title
    font_size: 36
    pos: int(Window.width/2-self.size[0]/2), int(Window.height- self.font_size*2.5)
    color: .2, .2, .2, 1
    size_hint: None, None



# Right panel

<RightPanel@BoxLayout>:
    id: right_block
    orientation: "vertical"
    pos_hint: {'right': 1, 'top': 1}
    size_hint: .2, .7


<RightPanelTitle@Label>:
    text: "{}: {}".format(Currency.units, app_config('bike', 'rm'))
    markup: True
    pos_hint: {'right': 1, 'top': 1}
    height: 40
    size_hint: None, None


# Left panel

<LeftPanel@BoxLayout>:
    id: left_panel
    orientation: 'vertical'
    pos_hint: {'left': 1, 'top': 0.62}
    size_hint: None, None
    spacing: 4

<LeftPanelBtn@PanelBtn>:
    pos_hint: {'x': 0, 'y': 0}
    text: "Menu"
