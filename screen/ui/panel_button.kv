#:import Window kivy.core.window.Window
#:import app_config utils.init.app_config
#:import PanelBtn screen.ui.bottom_button.PanelBtn


# Center panel

<CenterPanel@BoxLayout>:
    id: center_block
    orientation: 'vertical'

<CenterPanelTitle@Label>:
    id: title
    font_size: 36
    pos: 0, int(Window.height - self.font_size*2.2)
    color: .2, .2, .2, 1
    size_hint: 1, 0

# Right panel

<RightPanel@BoxLayout>:
    id: right_block
    orientation: "vertical"
    # pos_hint: {'right': .99}
    pos: Window.width-310, Window.height/4
    # size_hint: .25, 1

<RightPanelTitle@Label>:
    text: "{}: {}".format(Currency.units, app_config('bike', 'rm'))
    markup: True
    pos_hint: {'x': 0, 'y': 0}
    height: 30
    size_hint: None, None

# Left panel

<LeftPanel@BoxLayout>:
    id: left_panel
    orientation: 'vertical'
    pos_hint: {'left': 1, 'top': 0.62}
    size_hint: None, None
    spacing: 4

<LeftPanelBtn@PanelBtn>:
    pos_hint: {'x': 0, 'y': 0}
    text: "Menu"
