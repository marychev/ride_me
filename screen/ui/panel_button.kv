#:import Window kivy.core.window.Window
#:import app_config utils.init.app_config
#:import PanelBtn screen.ui.bottom_button.PanelBtn
#:import FS conf.FontSize


<TitleScreen@Label>:
    id: title
    font_size: FS.H1.value
    color: .2, .2, .2, 1
    size_hint: None, None
    margin_top: 100
    pos: int(Window.width/2 - self.width/2), int(Window.height - self.margin_top)


<RMTitle@Label>:
    text: "{}: {}".format(Currency.units, app_config('bike', 'rm'))
    markup: True
    font_size: FS.NORMAL.value
    size_hint: None, None
    height: self.font_size

<RMLayout@BoxLayout>:
    margin_top: 10
    size_hint: None, None
    pos: int(Window.width - root.ids.panel_rm.size[0]), int(Window.height - root.ids.panel_rm.size[1] - self.margin_top)
    RMTitle:
        id: panel_rm


# Carousel

<CarouselLayout@BoxLayout>:
    id: center_block
    orientation: 'vertical'


# Right panel

<RightPanel@BoxLayout>:
    id: right_block
    orientation: "vertical"
    pos: Window.width - (Window.width/4) - 5, Window.height/4
    size_hint: None, None

# Left panel

<LeftPanel@BoxLayout>:
    id: left_panel
    orientation: 'vertical'
    pos_hint: {'left': 1, 'top': 0.62}
    size_hint: None, None
    spacing: 4

<LeftPanelBtn@PanelBtn>:
    pos_hint: {'x': 0, 'y': 0}
    text: "Menu"
