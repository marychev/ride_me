#:import Window kivy.core.window.Window
#:import app_config utils.init.app_config
#:import PanelBtn screen.ui.bottom_button.PanelBtn


# Center panel

<CenterPanel@BoxLayout>:
    id: center_block
    orientation: 'vertical'

<CenterPanelTitle@Label>:
    id: title
    font_size: '28sp'
    color: .2, .2, .2, 1
    size_hint: None, None
    pos_hint: {'right': .54}

# Right panel

<RightPanel@BoxLayout>:
    id: right_block
    orientation: "vertical"
    pos: Window.width - int(Window.width/3.3) - 5, Window.height/4
    # pos_hint: {'right': .78, 'top': .44}
    size_hint: None, None

<RightPanelTitle@Label>:
    text: "{}: {}".format(Currency.units, app_config('bike', 'rm'))
    markup: True
    font_size: '9sp'
    pos_hint: {'x': .15}
    size_hint: None, None
    height: '18dp'

# Left panel

<LeftPanel@BoxLayout>:
    id: left_panel
    orientation: 'vertical'
    pos_hint: {'left': 1, 'top': 0.62}
    size_hint: None, None
    spacing: 4

<LeftPanelBtn@PanelBtn>:
    pos_hint: {'x': 0, 'y': 0}
    text: "Menu"
