#:import FS utils.sizes.FontSize

<StartScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: Window.width/3, 0
        Label:
            text: 'Ride me!!!'
            font_size: FS.H1.value
        Button:
            text: 'Restart game'
            on_press: root.restart_game()
        Button:
            text: 'Menu'
            on_press: root.manager.current = 'menu'
        Button:
            text: 'Open Settings'
            on_press: app.open_settings()
        Button:
            text: 'GO empty template'
            on_press: root.manager.current = 'game'
        Button:
            text: 'Pause'
            on_press: app.on_pause()
            disabled: True

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Label:
                text: '===========>'