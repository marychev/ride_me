<StartScreen>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Start Game'
            font_size: 18

        Button:
            text: 'GO'
            font_size: 42
            size_hint: .4, .4
            pos_hint: {'x': .3, 'y': .2}
            on_press: root.manager.current = 'game'

        Button:
            text: 'Restart game'
            size_hint: .4, .4
            pos_hint: {'x': .3, 'y': .2}
            on_press: root.restart_game()

        Button:
            text: 'Open Settings'
            size_hint: .4, .3
            pos_hint: {'x': .3, 'y': .2}
            on_press: app.open_settings()

        Button:
            text: 'Pause'
            size_hint: .4, .3
            pos_hint: {'x': .3, 'y': .2}
            on_press: app.on_pause()

        Button:
            text: 'Menu'
            size_hint: .4, .3
            pos_hint: {'x': .3, 'y': .2}
            on_press: root.manager.current = 'menu'

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Label:
                text: '===========>'