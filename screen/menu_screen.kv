#:import CharacterWrap screen.ui.character_wrap.CharacterWrap
#:import BikeMenuCarousel screen.ui.menu_carousel.BikeMenuCarousel
#:import LeftPanelMenuBikes screen.ui.panel_button.LeftPanelMenuBikes
#:import RightPanelBtn screen.ui.bottom_button.RightPanelBtn
#:import app_config utils.init.app_config


<MenuScreen>:
    LeftPanel:
        LeftPanelMenuBikes:
            id: left_panel_menu_bikes
        LeftPanelMenuMaps:
            id: left_panel_menu_maps
        LeftPanelMenuShop:

    CenterPanel:
        id: center_panel
        Label:
            text: "No bike"
        Label:
            text: "No map"

    RightPanel:
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            RightPanelTitle:
                id: panel_rm

    LeftPanelBtn:
        disabled: False
        on_press: app.sm.current = 'start'
    RightPanelBtn:
        id: right_panel_btn
        disabled: not bool(app_config('bike', 'title'))
