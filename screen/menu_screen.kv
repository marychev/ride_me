<MenuScreen>:
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint: .25, 1
            spacing: 4

            Label:
                text: " "
            Button:
                size_hint: .8, .6
                text: "Bike"
            Button:
                size_hint: .8, .6
                text: "Maps"
            Button:
                size_hint: .8, .6
                text: "Shop"
            Label:
                text: " "

            Button:
                size_hint: .5, 1
                pos_hint: {'left': 1, 'bottom': 1}
                text: "Cancel"
                on_press: app.sm.current = 'game'

        BoxLayout:
            orientation: 'vertical'
            size_hint: .5, 1

            Label:
                text: "No bike"

            Label:
                text: "No map"

        BoxLayout:
            orientation: 'vertical'
            size_hint: .25, 1

            Label:
                text: " "
            Label:
                text: "...."
            Label:
                text: "...."
            Label:
                text: "...."
            Label:
                text: " "
            Button:
                size_hint: .5, 1
                pos_hint: {'right': 1, 'bottom': 1}
                text: "Go"
                on_press: app.sm.current = 'start'

