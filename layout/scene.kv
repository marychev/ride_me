#:import Window kivy.core.window
#:import BackgroundImageAnimation layout.background_image


<Scene>:
    # background_color
    canvas.before:
        Color:
            rgb: (.6, .8, .8)
        Rectangle:
            pos: self.pos
            size: self.size


<BackgroundImageAnimation>
    canvas.before:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.mountains_texture
            size: self.width, self.height
            pos: self.x, self.y + 120
        Rectangle:
            texture: self.cloud_min_texture
            size: self.width, self.cloud_min_texture.height
            pos: self.x, self.y + self.height + 30
        Rectangle:
            texture: self.cloud_middle_texture
            size: self.width, self.cloud_middle_texture.height
            pos: 0, self.y + self.height + 50
        Rectangle:
            texture: self.cloud_big_texture
            size: self.width, self.cloud_big_texture.height
            pos: 0, self.y + self.height

# --- abstract ---

<ImageBackgroundOutline@Image>:
    canvas.after:
        Color:
            rgba: (1, .1, .1, 1)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    canvas.before:
        Color:
            rgba: (1, 0, 0, 0.1)
        Rectangle:
            pos: self.pos
            size: self.size


<ImageBackground@Image>:
    canvas.before:
        Color:
            rgba: (1, 0, 0, 0.1)
        Rectangle:
            pos: self.pos
            size: self.size


<ImageOutline@Image>:
    canvas.after:
        Color:
            rgb: (1, .1, .1, 1)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
