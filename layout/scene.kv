#:import Window kivy.core.window
#:import Background layout.background


<Scene>:
    # background_color
    canvas.before:
        Color:
            rgb: (.6, .8, .8)
        Rectangle:
            pos: self.pos
            size: self.size


<Background>
    canvas.before:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.mountains_texture
            size: self.width, self.height
            pos: self.x, self.y + 120
        Rectangle:
            texture: self.cloud_min_texture
            size: self.width, self.cloud_min_texture.height
            pos: self.x, self.y + self.height
        Rectangle:
            texture: self.cloud_middle_texture
            size: self.width, self.cloud_middle_texture.height
            pos: 0, self.y + self.height + 20
        Rectangle:
            texture: self.cloud_big_texture
            size: self.width, self.cloud_big_texture.height
            pos: 0, self.y + self.height - 30
