#:kivy 1.11.1
#:import Window kivy.core.window


<Scene>:
    # background_color
    canvas.before:
        Color:
            rgb: (.6, .8, .8)
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        source: 'layout/mountains-1.png'
        size: self.texture_size

        canvas:
            Rectangle:
                texture: self.texture
                size: self.width, self.height
                pos: 0, 100




# --- abstract ---

<ImageBackgroundOutline@Image>:
    canvas.after:
        Color:
            rgba: (1, .1, .1, 1)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    canvas.before:
        Color:
            rgba: (1, 0, 0, 0.1)
        Rectangle:
            pos: self.pos
            size: self.size


<ImageBackground@Image>:
    canvas.before:
        Color:
            rgba: (1, 0, 0, 0.1)
        Rectangle:
            pos: self.pos
            size: self.size


<ImageOutline@Image>:
    canvas.after:
        Color:
            rgb: (1, .1, .1, 1)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
